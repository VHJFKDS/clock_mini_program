.login{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  background: #eef7f6;
}
.login .avatar{
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 12rpx solid #f6705a;
  margin-bottom: 20rpx;
  margin-top: 283rpx;
}
.login .name-wrap{
  color: #f6705a;
  font-size: 38rpx;
  display: flex;
  position: relative;
  justify-content: center;
  margin-bottom: 60rpx;
  width: 100%;
}
.login .name-wrap::after{
  content: "";
  position: absolute;
  bottom: -15rpx;
  left: 50%;
  width: 25%;
  height: 4rpx;
  background: #f6705a;
  transform: translateX(-50%);
}
button::after{border: none;}
.button-hover{opacity: 0.9;}
.loginButton{
  width: 540rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size:26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(to right,#ef9b75,#f6705a);
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0,30);
}
.login .binding{
  color: #f6705a;
  font-size: 24rpx;
  margin-top: 46rpx;

}